<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:paddingVertical="24dp">
    <ImageView
        android:layout_marginTop="32dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />
    <RelativeLayout
        android:id="@+id/BodyLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner3"
        android:padding="18dp"
        android:layout_marginHorizontal="24dp"
        android:elevation="8dp">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="24dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/EmailReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Email :"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/header"
            />
        <EditText
            android:id="@+id/EmailRegTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example@mail.com"
            android:inputType="textEmailAddress"
            android:padding="18dp"
            android:maxLines="1"
            android:background="@drawable/rounded_corner"
            android:layout_below="@id/EmailReg"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:id="@+id/PasswordReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Password :"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/EmailRegTxt"
            />

        <EditText
            android:id="@+id/PasswordRegTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PasswordReg"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corner"
            android:hint="********"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="18dp" />
        <Button
            android:id="@+id/RegisterBtnInReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Register"
            android:textColorHint="@color/white"
            android:layout_below="@id/PasswordRegTxt"
            android:elevation="16dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BodyLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah memiliki akun?"
            />
        <TextView
            android:id="@+id/LoginBtnInReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/login"
            android:elevation="8dp"
            />
    </RelativeLayout>
</RelativeLayout>
